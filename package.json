{
  "name": "manufacturing-orchestrator",
  "version": "2.0.0",
  "description": "Queue-based Manufacturing Orchestrator for Fishbowl - Fault-tolerant work order processing with database queue",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration"
  },
  "keywords": [
    "fishbowl",
    "manufacturing",
    "work-orders",
    "queue",
    "erp"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@primno/dpapi": "^2.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "mysql2": "^3.15.3"
  },
  "optionalDependencies": {
    "p-limit": "^5.0.0"
  },
  "devDependencies": {
    "node-windows": "^1.0.0-beta.8",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "verbose": true
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
